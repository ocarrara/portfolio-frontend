{
  "name": "portfolio-frontend",
  "version": "0.0.0",
  "scripts": {
    "// Note: NODE_TLS_REJECT_UNAUTHORIZED=0 disables certificate verification for HTTPS connections": "",
    "// This is useful for local development with self-signed certificates": "",
    "// In production, this should not be used as it compromises security": "",
    "ng": "ng",
    "start": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && ng serve --proxy-config proxy.conf.dev.json --ssl false",
    "start:prod": "NODE_TLS_REJECT_UNAUTHORIZED=0 ng serve --proxy-config proxy.conf.prod.json",
    "start:windows": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && ng serve --proxy-config proxy.conf.dev.json",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:portfolio-frontend": "NODE_TLS_REJECT_UNAUTHORIZED=0 node dist/portfolio-frontend/server/server.mjs",
    "serve:ssr:portfolio-frontend:windows": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && node dist/portfolio-frontend/server/server.mjs",
    "serve:ssr:dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 node dist/portfolio-frontend/server/server.mjs --proxy-config proxy.conf.dev.json",
    "serve:ssr:dev:windows": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && node dist/portfolio-frontend/server/server.mjs --proxy-config proxy.conf.dev.json",
    "serve:ssr:prod": "NODE_TLS_REJECT_UNAUTHORIZED=0 node dist/portfolio-frontend/server/server.mjs --proxy-config proxy.conf.prod.json",
    "serve:ssr:prod:windows": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && node dist/portfolio-frontend/server/server.mjs --proxy-config proxy.conf.prod.json",
    "start:unix": "NODE_TLS_REJECT_UNAUTHORIZED=0 ng serve --proxy-config proxy.conf.dev.json --ssl false"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.19",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.19",
    "@angular/cli": "^18.2.19",
    "@angular/compiler-cli": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "http-proxy-middleware": "^3.0.5",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2"
  }
}
